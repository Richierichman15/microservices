NODE_ENV=development
PORT=3000
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/user-microservice
# MongoDB Atlas - replace with your connection string if using Atlas
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/user-microservice?retryWrites=true&w=majority
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRATION=1d
LOG_LEVEL=debug
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Enable mock mode (no MongoDB required)
# MOCK_MODE=true 